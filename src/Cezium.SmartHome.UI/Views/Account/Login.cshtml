@using Cezium.SmartHome.UI.Models.VM.Accounts
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartHome - Вход</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/css/login.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>


<body class="hold-transition login-page" style="background-image: url('@Model.BackgroundImage')">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html">Smart <b>HOME</b></a>
        </div>
        
        <div class="login-box-body">
            <p class="login-box-msg">Чтобы начать - представьтесь</p>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input class="form-control" placeholder="Имя" name="UserName">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Пароль" name="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>


                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label><input type="checkbox" checked="checked">&nbsp;&nbsp;Запомнить меня</label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Вход</button>
                    </div>
                </div>

            }

            <div style="text-align: right;"><a href="#">Не помню пароль</a></div>

        </div>
    </div>
    
    
    @Scripts.Render("~/bundles/js-lib")
    @Scripts.Render("~/bundles/admin-lte")

    <script>
          $(function () {
            $('input').iCheck({
              checkboxClass: 'icheckbox_square-blue',
              radioClass: 'iradio_square-blue',
              increaseArea: '20%' // optional
            });
          });
    </script>
    
    </body>
</html>